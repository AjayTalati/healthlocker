<div class="ma3 ma4-m ma4-l">
  <h3 class="tc">Toolkit</h3>
  <div class="ma3 ma4-m ma4-l mv2 mv3-m mv4-l">
    <b class="di"><%= markdown String.trim_trailing(@goal.content, " #Goal") %></b>
    <%= link "Edit", to: goal_path(@conn, :edit, @goal), class: "di" %>
    <p class="mv3">Created <%= String.slice(Date.to_string(@goal.inserted_at), 0..10) %></p>
    <%= link "Delete goal",
    to: goal_path(@conn, :delete, @goal),
    method: "delete"%>
  </div>
</div>
