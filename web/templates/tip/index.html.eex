<div class="ma3 ma4-m ma4-l mv2 mv3-m mv4-l">
  <h2 class="tc">Tips</h2>

  <%= for post <- @posts do %>
  <article class="ba b--black-05 mv2 mv3-m mv4-l">
    <div class="pt1 pb3 ph3 bg-near-white b--black-10 relative">
      <%= img_tag("#{image_url(post.content)}",
        class: "miniIcon absolute") %>
      <%= markdown post.content %>
    </div>
  </article>
  <% end %>
</div>
