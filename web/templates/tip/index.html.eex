<div class="ma3 ma4-m ma4-l mv2 mv3-m mv4-l">
  <h2 class="tc">Tips</h2>

  <%= for post <- @posts do %>
  <article class="ba b--black-05 mv2 mv3-m mv4-l">
    <div class="pv1 ph3 bg-near-white b--black-10">
      <p class="ph2 ph3-m ph4-l f5 f4-ns f3-m f2-l lh-copy"><%= markdown post.content %></p>
    </div>
  </article>
  <% end %>

  <p class="mt4 mb1">Explore more tips:</p>
  <%= link_to "#Connect", to: "/tips?tag=Connect"%>
  <%= link_to "#BeActive", to: "/tips?tag=BeActive"%>
  <%= link_to "#KeepLearning", to: "/tips?tag=KeepLearning"%>
  <%= link_to "#TakeNotice", to: "/tips?tag=TakeNotice"%>
  <%= link_to "#GiveToOthers", to: "/tips?tag=GiveToOthers"%>

  <p class="mt4"><%= link_to "Create a goal", to: "/goal/new"%> for yourself based on one of the 5 ways to wellbeing.</p>

</div>
